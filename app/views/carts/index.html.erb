<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>
<div class="container"  height= "300px" style=" width: 420px;">
<h1>Carts</h1>
<br>
<table>
  <thead>
    <tr>
      <!--<th><h6>Image</h6></th>
      <th><h6>Quantity</h6></th>
      <th><h6>Name</h6></th>-->
      <!--<th>Change_quantity</th>-->
      <!--<th><h6>Price</h6></th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart', new_cart_path, class: "btn btn-primary btn-sm" %>
</div>